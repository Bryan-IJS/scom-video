{
  "compilerOptions": {
    "target": "ES2017",
    "moduleResolution": "Node",
    "module": "AMD",
    "experimentalDecorators": true,
    "jsx": "react",
    "jsxFactory": "global.$render",
    "jsxFragmentFactory": "global.$render",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": false,
    "baseUrl": ".",
    "outFile": "dist/index.js",
    "paths": {
      "@ijstech/components": ["node_modules/@ijstech/components"],
      "@scom-video/*": ["src/*"],
    }
  },
  "include": ["src/*.tsx", "src/*.ts"],
  "exclude": ["node_modules"]
}

